---

// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from "../layouts/BaseLayout.astro";

import TimezoneDisplay from '../components/Timezone.astro';
import WorkPreview from '../components/WorkPreview.astro';


---

<BaseLayout>
    <div class="mx-auto -mt-12 max-w-7xl px-6 sm:mt-0 lg:px-8 xl:-mt-8">
        <div class="pt-12 sm:pt-12 prose prose-zinc prose-xl dark:prose-invert">
            <div>
                <h2 class="">Welcome to my portfolio</h2>
                <p class="mt-2 max-w-4xl text-pretty tracking-tight">
                    I'm a software engineer specialising in game development
                    based in Australia. I love building software and learning
                    new ways to improve the way I make games.
                </p>
            </div>
        </div>
    </div>

    <div>
        <div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
            <div
                class="mt-10 grid gap-4 sm:mt-16 lg:grid-cols-3 lg:grid-rows-2"
            >
                <div
                    class="relative lg:row-span-2 prose prose-zinc dark:prose-invert"
                >
                    <div
                        class="absolute inset-px rounded-lg bg-zinc-100 dark:bg-zinc-800 lg:rounded-l-[2rem]"
                    >
                    </div>
                    <div
                        class="relative flex h-full flex-col overflow-hidden rounded-[calc(theme(borderRadius.lg)+1px)] lg:rounded-l-[calc(2rem+1px)]"
                    >
                        <div class="px-8 pb-3 pt-8 sm:px-10 sm:pb-0 sm:pt-10">
                            <h3 class="mt-2 max-lg:text-center">Engines</h3>
                            <ul
                                role="list"
                                class=""
                                style="list-style-type:square"
                            >
                                <li>Unreal Engine 5</li>
                                <li>Unity</li>
                            </ul>

                            <h3 class="mt-2 max-lg:text-center">Languages</h3>
                            <ul
                                role="list"
                                class=""
                                style="list-style-type:square"
                            >
                                <li>C++</li>
                                <li>C#</li>
                                <li>Odin#</li>
                            </ul>

                            <h3 class="mt-2 max-lg:text-center">Tools</h3>
                            <ul
                                role="list"
                                class=""
                                style="list-style-type:square"
                            >
                                <li>RenderDoc</li>
                                <li>Git, Unity VCS, Perforce</li>
                                <li>Visual Studio, Rider</li>
                            </ul>
                            
                        </div>
                    </div>
                    <div
                        class="pointer-events-none absolute inset-px rounded-lg shadow ring-1 ring-zinc-300 dark:ring-zinc-700 lg:rounded-l-[2rem]"
                    >
                    </div>
                </div>
                <div class="relative max-lg:row-start-1">
                    <div
                        class="absolute inset-px rounded-lg bg-zinc-100 dark:bg-zinc-800 max-lg:rounded-t-[2rem]"
                    >
                    </div>
                    <div
                        class="relative flex h-full flex-col overflow-hidden prose prose-zinc dark:prose-invert rounded-[calc(theme(borderRadius.lg)+1px)] max-lg:rounded-t-[calc(2rem+1px)]"
                    >
                        <div class="px-8 pt-8 sm:px-10 sm:pt-10">
                            <h3 class="mt-2 tracking-tight max-lg:text-center">
                                Location and Timezone
                            </h3>
              
                            <TimezoneDisplay yourTimezone="Australia/Sydney" />
                        </div>
                    </div>
                    <div
                        class="pointer-events-none absolute inset-px rounded-lg shadow ring-1 ring-zinc-300 dark:ring-zinc-700 max-lg:rounded-t-[2rem]"
                    >
                    </div>
                </div>
                <div
                    class="relative max-lg:row-start-3 lg:col-start-2 lg:row-start-2 prose prose-zinc dark:prose-invert"
                >
                    <div
                        class="absolute inset-px rounded-lg bg-zinc-100 dark:bg-zinc-800"
                    >
                    </div>
                    <div
                        class="relative flex h-full flex-col overflow-hidden rounded-[calc(theme(borderRadius.lg)+1px)]"
                    >
                      <div class="px-8 pt-8 sm:px-10 sm:pt-10 flex flex-col items-start">
    <h3 class="mt-2 tracking-tight max-lg:text-center">
        Blog
    </h3>
    <p class="mt-2 max-w-lg max-lg:text-center">
        Thoughts, Tales, and Tech from a Game Dev
    </p>
    <div class="w-full flex justify-end mt-4 pb-8"> <!-- Added this div for alignment -->
        <a href="/blog" class="not-prose">
            <button type="button" class="inline-flex items-center gap-x-2 rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                Explore Posts
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-4">
                    <path fill-rule="evenodd" d="M2 8a.75.75 0 0 1 .75-.75h8.69L8.22 4.03a.75.75 0 0 1 1.06-1.06l4.5 4.5a.75.75 0 0 1 0 1.06l-4.5 4.5a.75.75 0 0 1-1.06-1.06l3.22-3.22H2.75A.75.75 0 0 1 2 8Z" clip-rule="evenodd" />
                </svg>
            </button> 
        </a>
    </div>
</div>
                    </div>
                    <div
                        class="pointer-events-none absolute inset-px rounded-lg shadow ring-1 ring-zinc-300 dark:ring-zinc-700"
                    >
                    </div>
                </div>
                <div class="relative lg:row-span-2">
                    <div
                        class="absolute inset-px rounded-lg bg-zinc-100 dark:bg-zinc-800 max-lg:rounded-b-[2rem] lg:rounded-r-[2rem]"
                    >
                    </div>
                    <div
                        class="relative flex h-full flex-col overflow-hidden prose prose-zinc dark:prose-invert rounded-[calc(theme(borderRadius.lg)+1px)] max-lg:rounded-b-[calc(2rem+1px)] lg:rounded-r-[calc(2rem+1px)]"
                    >
                        <WorkPreview/>
                     <div class="pointer-events-none absolute inset-px rounded-lg shadow ring-1 ring-zinc-300 dark:ring-zinc-700 max-lg:rounded-b-[2rem] lg:rounded-r-[2rem]"></div>
                </div>
            </div>
        </div>
    </div></BaseLayout
>
